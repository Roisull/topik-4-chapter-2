                android:text="Bola"
                android:layout_marginLeft="20dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masak"
                android:layout_marginLeft="20dp"/>
            <CheckBox
                android:layout_width="wrap_content"
